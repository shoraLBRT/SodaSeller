@model IEnumerable<SodaSeller.Models.MachineCoins>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-outline-dark" asp-controller="AdminPage" asp-action="Index">Управление продуктами SodaSeller</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoinValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLocked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoinValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsLocked)
                </td>
                <td>
                    <img src="@(item.ImageLink)" alt="изображение монеты" width="100" height="80" />
                </td>
                <td>
                    <a class="btn btn-outline-dark" style="font-size:smaller" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>
